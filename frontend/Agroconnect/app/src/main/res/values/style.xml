<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ContainerComponents">
        <item name="android:background">@drawable/container_componentes</item>
        <item name="android:layout_margin">5sp</item>
    </style>

    <style name="botao_caregoria">
        <item name="android:background">@drawable/container_componentes</item>
    </style>

    <style name="Text_view">
        <item name="android:layout_width">100sp</item>
        <item name="android:layout_height">33sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">8sp</item>
    </style>

    <style name="contagem_pedidos">
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="layout_constraintEnd_toEndOf">"@id/containerComponents"</item>
        <item name="layout_constraintStart_toStartOf">"@id/containerComponents"</item>
        <item name="layout_constraintTop_toTopOf">"@id/containerComponents"</item>
    </style>

    <style name="button_status_pedidos">
        <item name="layout_constraintEnd_toEndOf">"@id/containerComponents"</item>
        <item name="layout_constraintStart_toStartOf">"@id/containerComponents"</item>
        <item name="layout_constraintTop_toTopOf">"@id/containerComponents"</item>
    </style>

    <style name="Edit_text">
        <item name="android:layout_width">0sp</item>
        <item name="android:layout_height">50sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/cinza_escuro</item>
        <item name="android:layout_marginStart">30sp</item>
        <item name="android:layout_marginTop">40sp</item>
        <item name="android:layout_marginEnd">30sp</item>
    </style>

    <style name="button_acessar">
        <item name="android:background">@drawable/container_componentes</item>
        <item name="backgroundColor">@color/verde_claro</item>
    </style>

    <style name="ProdutoBackground" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearance</item>
    </style>

    <style name="CustomShapeAppearance" parent="">
        <item name="cornerSizeTopLeft">15dp</item>
        <item name="cornerSizeTopRight">15dp</item>
        <item name="cornerSizeBottomLeft">50dp</item>
        <item name="cornerSizeBottomRight">50dp</item>
    </style>

</resources>